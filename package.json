{
  "name": "ucaas-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "UCAAS TypeScript Monorepo",
  "scripts": {
    "dev": "pnpm --parallel --stream dev",
    "dev:backend": "pnpm --filter @ucaas/backend dev",
    "dev:frontend": "pnpm --filter @ucaas/frontend dev",
    "build": "pnpm --recursive --stream build",
    "build:backend": "pnpm --filter @ucaas/backend build",
    "build:frontend": "pnpm --filter @ucaas/frontend build",
    "build:shared": "pnpm --filter @ucaas/shared build",
    "clean": "pnpm --recursive --parallel exec rm -rf dist node_modules .turbo",
    "typecheck": "tsc --build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "turbo": "^1.12.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}
